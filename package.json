{
  "name": "freess",
  "version": "1.0.0",
  "description": "Opinion free css framework. FreeSS focuses on giving you the bare minimum you need to position your elements without having to worry about overriding your styles.",
  "style": "dist/css/freeSS.min.css",
  "sass": "sass/base.scss",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon -e scss -x 'npm run build",
    "compile": "node-sass --include-path scss scss/base.scss dist/css/freeSS.css",
    "minify": "uglifycss --output dist/css/freeSS.min.css dist/css/freeSS.css",
    "build": "npm run compile && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alocke12992/FreeSS.git"
  },
  "author": "Jandrei Pitti, Andrew Locke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alocke12992/FreeSS/issues"
  },
  "homepage": "https://github.com/alocke12992/FreeSS#readme",
  "dependencies": {},
  "devDependencies": {
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "uglifycss": "0.0.29"
  }
}
